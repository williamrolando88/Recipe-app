<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mt-4'>
    <%= form.label :name, style: "display: block", class:'font-semibold text-xl' %>
    <%= form.text_field :name, class:'border px-2 py-1 rounded-md mt-2' %>
  </div>

  <div class='mt-4'>
    <%= form.label :measurement_unit, style: "display: block", class:'font-semibold text-xl' %>
    <%= form.text_field :measurement_unit, class:'border px-2 py-1 rounded-md mt-2' %>
  </div>

  <div class='mt-4'>
    <%= form.label :price, style: "display: block", class:'font-semibold text-xl' %>
    <%= form.number_field :price, class:'border px-2 py-1 rounded-md mt-2' %>
  </div>

  <div class='mt-4'>
    <%= form.submit 'Add food', class:'border px-2 py-1 rounded bg-green-400 hover:bg-green-200 w-fit font-medium text-white hover:text-green-800 cursor-pointer' %>
  </div>
<% end %>
