<%= link_to recipe_path(recipe) do %>
<div id="<%= dom_id recipe %>", class='border border-neutral-800 p-6 flex justify-between' >
  <div class='flex flex-col items-start gap-4'>
    <h3 class='text-3xl font-bold'>
      <%= recipe.name %>
    </h3>
    <p>
      <strong>By:</strong>
      <%= recipe.user.name %>
    </p>
  </div>
  <div class='flex flex-col items-start w-1/2'>
    <p>
      <strong>Total food items:</strong>
      <%= RecipeFood.total_ingredients(recipe.id) %>
    </p>
    <p>
      <strong>Total price:</strong>
      $
      <%= RecipeFood.total_ingredients_cost(recipe.id) %>
      USD
    </p>
  </div>
</div>
<% end %>
