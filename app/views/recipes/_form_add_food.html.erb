<%= form_with( url: "/recipe_foods/#{recipe_food.recipe_id}", method: :post) do |form| %>
  <div>
    <%= form.label :food_id, style: "display: block" %>
    <%= form.collection_select :food_id, Food.where(user_id: current_user.id).order(:name), :id, :name %>
  </div>
  
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>